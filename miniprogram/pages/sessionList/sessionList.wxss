/* miniprogram/pages/sessionList/sessionList.wxss */
.container {
  height: auto;
  width: 750rpx;
}
.top-container {
  height: auto;
  width: 750rpx;
  margin-top: 20rpx;
  display: flex;
}

.title {
  height: 100%;
  width: 450rpx;
  line-height: normal;
  padding-left: 40rpx;
  font-weight: 600;
  font-size: 30;
  color: black;
}

.courseID {
  height: 100%;
  width: 200;
  margin-left: 40rpx;
  font-weight: 400;
  font-size: 25rpx;
  line-height: normal;
  color:#15A885;
}

.courseIntro {
  height: auto;
  width: 690rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 25rpx;
  font-weight: 400;
  color: black;
}

.lower-container {
  height: auto;
  width: 700rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;

}
.tag {
  height: 100rpx;
  width: 650rpx;
  margin-top: 20rpx;
  margin-left: 25rpx;
  margin-bottom: 10rpx;
  background-color: purple;
  display: flex;
  align-items: center;
}

.tag-title {
  width: 600rpx;
  margin-left: 15rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: white;
}

.tag-sign {
  margin-right: 10rpx;
  font-size: 90rpx;
  font-weight: 50;
  color: white;
}

.session-container {
  height: 500rpx;
  width: 650rpx;
  margin-left: 30rpx;
  border-bottom: grey solid 5rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.minor-info {
  margin-top: 20rpx;
  margin-left: 10rpx;
  height: 450rpx;
  width: 200rpx;
  background-color: #EAECEE;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
}

.other {
  height: auto;
  width: 100%;
  margin-top: 14rpx;
  padding-bottom: 5rpx;
  color: black;
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
}

.major-info {
  margin-top: 20rpx;
  margin-left: 15rpx;
  height: 435rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}

.inner-box {
  height: 50rpx;
  width: 400rpx;
  display: flex;
}

.name {
  height: 100%;
  width: 35%;
  font-size: 27rpx;
  font-weight: 500;
  padding-top: 10rpx;
  text-align: center;
}

.content {
  height: 100%;
  width: 65%;
  font-size: 24rpx;
  font-weight: 300;
  border-left: purple solid 5rpx;
  margin-left: 10rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  text-align: left;
  
}



